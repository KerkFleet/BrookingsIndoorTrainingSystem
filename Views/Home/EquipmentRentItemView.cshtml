@model BrookingsIndoorTrainingSystem.Models.EquipmentModel
@* ++++++ INCLUDE MODEL TO CONTECT TO CONTROLLER --John ++++++*@

@{ ViewBag.Title = "Equipment rent items"; }


<!DOCTYPE html>
<html>
<head>
    <title>Customer Form</title>
</head>
<div class="form-horizontal">
    <center>
        <div class="form-group">
            <div class="col-md-10">
                <h5>@Html.Label("Equipment - Rent Item", new { style = "font-size:40px; color:##36e800" })</h5>
                @*@/* green bar*/*@
                <html>

                <meta name="viewport" content="width=device-width, initial-scale=1">
                <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
                <body>
                    <div class="w3-container">


                        <div class="w3-bar w3-border w3-green">
                            <div class="w3-bar-item"></div>



                        </div>



                        <div class="form-horizontal">
                            <form method="post">
                                <fieldset>
                                    <select id="Items" name="Items">
                                        <option value="SoccerBall">Soccer Balls</option>
                                        <option value="BasketBall">Basket Balls</option>
                                    </select>
                                    <label for="hours">Hours:</label>
                                    <input type="number" id="hours" name="hours" min="1" max="500">
                                    <input type="submit" />
                                </fieldset>
                            </form>
                        </div>


                        @{
                            if (IsPost)
                            {
                                string item = Request.Form["Items"];
                                int hours = Request.Form["hours"].AsInt();
                                <div class="col-md-10">
                                    <text align="left">
                                        You Rented: <br />
                                        Item: @item <br />
                                        For @hours hours <br />
                                    </text>

                                </div>



                            }
                        }

                    </div>
                </body>
            </html>
            @*@/* end green bar*/*@

        </div>
    </div>
</center>
</div>

</html>
