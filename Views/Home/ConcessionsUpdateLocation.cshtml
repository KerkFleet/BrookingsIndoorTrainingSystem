
@model BrookingsIndoorTrainingSystem.Models.ConcessionsModel

@{
    List<SelectListItem> list = new List<SelectListItem>();
    SelectListItem FrontDryStorage = new SelectListItem() { Text = "Front Dry Storage", Value = "Front Dry Storage" };
    list.Add(FrontDryStorage);
    SelectListItem FrontColdStorage = new SelectListItem() { Text = "Front Cold Storage", Value = "Front Cold Storage" };
    list.Add(FrontColdStorage);
    SelectListItem BackDryStorage = new SelectListItem() { Text = "Back Dry Storage", Value = "Back Dry Storage" };
    list.Add(BackDryStorage);
    SelectListItem BackColdStorage = new SelectListItem() { Text = "Back Cold Storage", Value = "Back Cold Storage" };
    list.Add(BackColdStorage);
}

@using (Html.BeginForm("ConcessionsMoveItem", "Home", new { itemName = ViewBag.itemName, id = ViewBag.id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <center>
            <h3 class="left">
                Move Item - @ViewBag.itemName
            </h3>
            <div class="form-group">
                <div class="col-md-10">
                    @*@/* green bar - Shelby */*@
                    <html>

                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
                    <body>
                        <div class="w3-container">


                            <div class="w3-bar w3-border w3-green">
                                <div class="w3-bar-item"></div>

                            </div>

                        </div>
                    </body>
                </html>
                @*@/* end green bar - Shelby */*@

            </div>
        </div>
        </center>
</div>

<hr />

<div class="form-horizontal">
    <center>
        <div class="form-group">
            <div class="col-md-10">
                <font size="4" face="helvetica" color="black">

                    <div>Enter how many of the specified item you would like to move:</div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.itemAmount, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.itemAmount, "", new { @class = "text-danger" })
                        </div>
                    </div>




                    <html>
                    <body>


                        @*input boxes to update items - shelby*@



                        @* ****** ComboBox ****** *@


                        <div class="form-horizontal">


                            <center>


                                <div class="form-group">


                                    <div class="col-md-10">


                                        <font size="5" face="helvetica" color="black">


                                            @Html.DropDownListFor(model => model.itemLoc, list, new { @class = "text-danger" })
                                            <div class="form-group">
                                                <div class="col-md-8">
                                                    <input type="submit" value="Submit" class="btn btn-default" />
                                                </div>
                                            </div>


                                        </font>


                                    </div>


                                </div>


                            </center>


                        </div>


                        @* ****** ComboBox ****** *@





                        @*end input boxes to update items - shelby*@
                    </body>
                </html>

            </font>
        </div>
    </div>
</center>
</div>
}

