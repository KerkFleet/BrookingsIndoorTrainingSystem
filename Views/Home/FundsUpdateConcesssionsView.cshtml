@model BrookingsIndoorTrainingSystem.Models.FundsModel
@* ++++++ INCLUDE MODEL TO CONTECT TO CONTROLLER --John ++++++*@

@{
    ViewBag.Title = "FundsUpdateConcesssionsView";
    //ViewBag.Concessions = Model.Concessions;
}

<h2>FundsUpdateConcesssionsView</h2>


@using (Html.BeginForm("FundsUpdateConcesssions", "Home", new { Amount = Model.Concessions, }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 class="left">
            Concessions Funds
        </h3>
        <center>
            <div class="form-group">
                <div class="col-md-10">

                    @*@/* green bar - Shelby */*@
                    <html>
                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
                    <body>
                        <div class="w3-container">


                            <div class="w3-bar w3-border w3-#36e800">
                                <div class="w3-bar-item"></div>

                            </div>

                        </div>
                    </body>
                </html>
                @*@/* end green bar - Shelby */*@

            </div>
        </div>
    </center>
</div>

<hr />

<div class="form-horizontal">

    <div class="form-group">
        <div class="col-md-10">
            <font size="4" face="helvetica">
                <h3 class="left">
                    Concessions Funds currently has:
                </h3>
                <h2 class="left" style="color:#36e800;">
                    &nbsp; $ @*@Model.Concessions*@
                </h2>
                <html>
                <body>


                    @*input boxes to update items - shelby*@
                    <div class="form-horizontal">


                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Concessions, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Concessions, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-8">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>



                    @*end input boxes to update items - shelby*@
                </body>
            </html>

        </font>
    </div>
</div>

</div>
}