@model BrookingsIndoorTrainingSystem.Models.ConcessionsModel
@* ++++++ INCLUDE MODEL TO CONTECT TO CONTROLLER --John ++++++*@


@using (Html.BeginForm("ConcessionsCartAddItem", "Home", new { itemName = ViewBag.itemName, id = ViewBag.id, itemPrice = ViewBag.itemPrice }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="left">
            Add - @ViewBag.itemName - to cart
        </h2>
        <center>
            <div class="form-group">
                <div class="col-md-10">

                    @*@/* green bar - Shelby */*@
                    <html>

                    <meta name="viewport" content="width=device-width, initial-scale=1">
                    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
                    <body>
                        <div class="w3-container">


                            <div class="w3-bar w3-border w3-green">
                                <div class="w3-bar-item"></div>

                            </div>

                        </div>
                    </body>
                </html>
                @*@/* end green bar - Shelby */*@

            </div>
        </div>
    </center>
    </div>

<hr />

<div class="form-horizontal">
    <center>
        <div class="form-group">
            <div class="col-md-10">
                <font size="4" face="helvetica" color="black">
                    <div>How many units would you like to add to the Cart?:</div>
                <html>
                    <body>


                        @*input boxes to update items - shelby*@
                        <div class="form-horizontal">


                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.itemAmount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.itemAmount, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-8">
                                    <input type="submit" value="Submit" class="btn btn-default" />
                                </div>
                            </div>
                        </div>

                        @*end input boxes to update items - shelby*@
                    </body>
                </html>

            </font>
        </div>
    </div>
</center>
</div>
}